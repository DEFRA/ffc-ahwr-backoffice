    "hapi-pino": "11.0.1",
    "http-status-codes": "2.3.0",
    "joi": "17.13.3",
    "jquery": "3.7.1",
    "node-cron": "3.0.3",
    "nunjucks": "3.2.4",
    "xml2js": "0.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/plugin-transform-modules-commonjs": "7.27.1",
