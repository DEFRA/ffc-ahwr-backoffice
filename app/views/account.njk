{% extends './layouts/layout.njk' %}

{% block pageTitle %}
  {{ siteTitle }}: AHWR Applications
{% endblock %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      {% if model.rbac.enabled %}
      <h1 class="govuk-heading-l">Role based access</h1>
      {% endif %}
      {{ govukSummaryList({
      classes: "govuk-!-margin-bottom-9",
      rows: model.userScopes.rows
    }) }}
    </div>
  </div>
{% endblock %}