{% macro viewClaimConfirmationForm(applicationId, page, crumb) %}
  <div class="govuk-panel govuk-panel--confirmation govuk-!-text-align-left">
    <h1 class="govuk-panel__title-s govuk-!-font-size-36 govuk-!-margin-top-1">Authoriser only</h1>
    <div class = "govuk-button--group-vertical">
      <button class="govuk-button govuk-button govuk-!-margin-bottom-3" onclick="location.href='/view-application/{{ applicationId }}?page={{page}}&approve=true';">Approve claim</button>
      <button class="govuk-button govuk-button--secondary govuk-!-margin-bottom-3" onclick="location.href='/view-application/{{ applicationId }}?page={{page}}&reject=true';">Reject claim</button>
    </div>
    <input type="hidden" name="reference" value="{{ applicationId }}"/>
    <input type="hidden" name="page" value="{{ page }}"/>
    <input type="hidden" name="crumb" value="{{crumb}}"/>
  </div>
{% endmacro %}
