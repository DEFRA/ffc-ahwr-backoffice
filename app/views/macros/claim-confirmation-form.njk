{% macro viewClaimConfirmationForm(applicationId, page, crumb) %}
  <div class="govuk-panel govuk-panel--confirmation govuk-!-text-align-left">
    <h1 class="govuk-panel__title-s govuk-!-font-size-36 govuk-!-margin-top-1">Are you sure you want to process claim?</h1>
    <form method="POST" autocomplete="off" novalidate="novalidate" action="/process-application-claim">
      <button class="govuk-button govuk-button govuk-!-margin-bottom-3" name="approveClaim" value="yes">Approve</button>
      <button class="govuk-button govuk-button--secondary govuk-!-margin-bottom-3" name="approveClaim" value="no">Reject</button>
      <input type="hidden" name="reference" value="{{ applicationId }}" />
      <input type="hidden" name="page" value="{{ page }}" />
      <input type="hidden" name="crumb" value="{{crumb}}"/>
    </form>
  </div>
{% endmacro %}
