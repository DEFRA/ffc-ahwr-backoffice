{% macro viewRecommendForm(claimOrApplication, reference, page, crumb) %}
  <div class="govuk-button-group">
    <a class="govuk-button" href="/view-application/{{ reference }}?page={{page}}&recommendToPay=true" role="button" id="btn-recommend-to-pay">Recommend to pay</a>
    <a class="govuk-button" role="button" href="/view-application/{{ reference }}?page={{page}}&recommendToReject=true" id="btn-recommend-to-reject">Recommend to reject</a>
    <input type="hidden" name="claimOrApplication" value="{{ claimOrApplication }}" />
    <input type="hidden" name="reference" value="{{ reference }}" />
    <input type="hidden" name="page" value="{{ page }}"/>
    <input type="hidden" name="crumb" value="{{crumb}}"/>
  </div>
{% endmacro %}