{% macro filter(availableStatus, selectedStatus) %}
    <!-- Filters -->
    <div class="govuk-grid-column-one-quarter govuk-!-margin-top-5">
        <div class="govuk-filter govuk-!-padding-3" style="background-color:#eeeeee;">
            <div class="govuk-filter__content">
                <div class="govuk-filter__selected govuk-!-margin-bottom-5">
                    <div class="govuk-filter__selected-heading">
                        <div class="govuk-filter__heading-title">
                            <h2 class="govuk-heading-s">Filters</h2>
                        </div>
                        {% if selectedStatus %}
                            <h3 class="govuk-body">Selected</h3>
                            <div class="govuk-filter__heading-action">
                                <p class="govuk-body-s">
                                    <a class="govuk-link--no-visited-state" href="">Clear filters</a>
                                </p>
                                {% for status in selectedStatus %}
                                    <a class="govuk-tag {{status.styleClass}}" href="/path/to/remove/this" style="color:#104189;">
                                        <span class="govuk-visually-hidden">Remove this filter</span>
                                        {{status.aStatus}}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="govuk-filter__options">
                    <div class="govuk-form-group govuk-!-margin-bottom-0">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend">Status</legend>
                            {% if availableStatus %}
                                <div class="govuk-checkboxes govuk-checkboxes--small" data-module="govuk-checkboxes">
                                    {% for status in availableStatus %}
                                        <div class="govuk-checkboxes__item">
                                            <input class="govuk-checkboxes__input" id="status" name="status" type="checkbox" value="{{status.aStatus}}">
                                            <label class="govuk-label govuk-checkboxes__label" for="status">{{status.aStatus}} ({{status.total}})</label>
                                        </div>
                                    {% endfor %}
                                    <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button">Apply filters</button>
                                </div>
                            {% endif %}
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endmacro %}