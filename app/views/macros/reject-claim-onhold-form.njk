{% macro viewRejectClaimOnHoldForm(applicationId, page, crumb) %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      <div class="govuk-panel govuk-panel--confirmation govuk-!-text-align-left">
    <h1 class="govuk-panel__title-s govuk-!-font-size-36 govuk-!-margin-top-1">Are you sure you want to Move to IN CHECK?</h1>
        <form method="POST" autocomplete="off" novalidate="novalidate" action="/reject-on-hold-claim" id="rejectClaimOnHoldForm">
          <button class="govuk-button govuk-button govuk-!-margin-bottom-3" name="rejectOnHoldClaimRequest" value="yes">Yes</button>
          <button class="govuk-button govuk-button govuk-!-margin-bottom-3" name="rejectOnHoldClaimRequest" value="no">Cancel</button>
          <input type="hidden" name="reference" value="{{ applicationId }}" />
          <input type="hidden" name="page" value="{{ page }}" />
          <input type="hidden" name="crumb" value="{{crumb}}"/>
        </form>
      </div>
    </div>
  </div>
{% endmacro %}
