{% extends './layouts/layout.njk' %}

{% block pageTitle %}
  {{ siteTitle }}: Application Files
{% endblock %}
{% set backLink %}
 /applications?page={{page}}
{% endset -%}
{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukCheckboxes({
        idPrefix: "files",
        name: "files",
        fieldset: {
          legend: {
            text: "Select File to download",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: files
      }) }}
    </div>
  </div>
{% endblock %}
